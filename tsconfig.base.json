{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fmmenchi/components": ["libs/components/src/index.ts"],
      "@fmmenchi/utils": ["libs/utils/src/index.ts"],
      "@fmmenchi/utils/server": ["libs/utils/src/server.ts"],
      "@fmmenchi/icons/*": ["libs/icons/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
